{
    "name": "sicet7/base",
    "description": "Base lib",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sicet7\\Base\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Martin René Sørensen",
            "email": "git@sicet7.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-zip": "*",
        "ext-sockets": "*",
        "psr/http-server-handler": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "spiral/roadrunner": "^2.12",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.3",
        "slim/slim": "^4.11",
        "php-di/slim-bridge": "^3.3",
        "nyholm/psr7": "^1.5",
        "doctrine/orm": "^2.14",
        "doctrine/migrations": "^3.6",
        "symfony/psr-http-message-bridge": "^2.1",
        "symfony/http-foundation": "^6.2",
        "symfony/cache": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
